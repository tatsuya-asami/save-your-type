{
  "manifest_version": 3,
  "name": "Save Your Type",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "content_scripts": [
    {
      "js": ["src/content.jsx"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["storage", "background"],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  }
}
